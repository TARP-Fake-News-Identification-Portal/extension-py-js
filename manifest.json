{
    "name": "Getting Started Example",
    "description": "building an extension!",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "/functionality/background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "/user-interface/popup.html",
        "default_icon": {
            "16": "/user-interface/images/twitter/twitter-16.png",
            "32": "/user-interface/images/twitter/twitter-32.png",
            "48": "/user-interface/images/twitter/twitter-48.png",
            "128": "/user-interface/images/twitter/twitter-128.png"
        }
    },
    "icons": {
        "16": "/user-interface/images/twitter/twitter-16.png",
        "32": "/user-interface/images/twitter/twitter-32.png",
        "48": "/user-interface/images/twitter/twitter-48.png",
        "128": "/user-interface/images/twitter/twitter-128.png"
    },
    "options_page": "/user-options/options.html"
}